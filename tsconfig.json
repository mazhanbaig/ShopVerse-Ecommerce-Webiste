{
  "compilerOptions": {
    // Input folder where your TS files are
    "rootDir": "./src",

    // Output folder for compiled JS
    "outDir": "./dist",

    // Set target JS version (ES6 works for browsers)
    "target": "ES6",

    // Use standard modules
    "module": "commonjs",

    // Generate source maps for debugging
    "sourceMap": true,

    // Generate declaration files (optional)
    "declaration": false,

    // Enable strict mode
    "strict": true,

    // Skip library type checks for speed
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
